{% extends "includes/base.jinja2" %}
{% set show_contact_form_support_hint = True %}
{# Helper vars #}
{% set clock_image_small = '<img style="width: 11px; height: 11px; position: relative; top: 2px;" alt="" src="cid:%(cid)s" />'|format(cid=clock_icon_cid) %}
{% set clock_image = '<img style="width: 15px; height: 15px; position: relative; top: 2px;" alt="" src="cid:%(cid)s" />'|format(cid=clock_icon_cid) %}
{% set calendar_image = '<img style="width: 14px; height: 14px; position: relative; top: 2px;" alt="" src="cid:%(cid)s" />'|format(cid=calendar_icon_cid) %}
{# Code begins! #}
{% block introduction %}
  <div style="color: {{ colour_text_base }}; text-align: center; line-height: 16px;">
    <p style="font-weight: 700; margin: 0;">
      {{ l10n('confirm-mail-html-heading-name', {'name': name}, lang) }}
    </p>
    <p style="color: {{ colour_text_muted }}; font-size: 9px; line-height: 10px; font-weight: 700; margin: 0;">
      {{ l10n('confirm-mail-html-heading-email', {'email': email}, lang) }}
    </p>
    <p style="font-weight: 400; margin: 0;">
      {{ l10n('confirm-mail-html-heading-text', {'schedule_name': schedule_name}, lang) }}
    </p>
  </div>
{% endblock %}
{% block information %}
  <div style="display: flex">
    {# Time details #}
    <div style="width: 100%; font-weight: 700; margin: 24px 12px;">
      <div style="margin-bottom: 6px;">
        {{ clock_image|safe }} {{ time_range }}
        <span style="color: {{ colour_icon_secondary }}; font-size: 9px">{{ timezone }}</span>
      </div>
      <div>
        {{ calendar_image|safe }} {{ day }}
      </div>
    </div>
    {# Chip #}
    <div style="
      min-width: 60px;
      margin-left: auto;
      margin-right: 0;
      text-align: center;
      background-color: {{ colour_tbpro_apmt_secondary }};
      padding: 3px 12px;
      border-radius: 3px;
      font-size: 9px;
      font-weight: 700;
      height: 16px;
      ">
      {{ clock_image_small|safe }} {{ l10n('confirm-mail-html-time', {'duration': duration}, lang) }}
    </div>
  </div>
{% endblock %}
{% block call_to_action %}
  <div style="margin-bottom: 12px">
    <a
      href="{{ confirm }}"
      style="
        display: inline-block;
        font-size: 13px;
        padding: 12px 24px;
        color: {{ colour_neutral }};
        background: {{ colour_tbpro_apmt_primary }};
        border-radius: 3px;
        border: 1px solid {{ colour_tbpro_apmt_primary_hover }};
        box-shadow: 0px 6px 3px -4px rgba(21, 47, 60, 0.30);
        text-decoration:none;
        white-space: nowrap;
        "
    >{{ l10n('confirm-mail-html-confirm-action', lang=lang) }}</a>
  </div>
  <div>
    <a
      href="{{ deny }}"
      style="
        display: inline-block;
        font-size: 13px;
        padding: 12px 24px;
        color: {{ colour_tbpro_apmt_primary }};
        text-decoration-line: underline;
        font-weight: 400;
        "
    >{{ l10n('confirm-mail-html-deny-action', lang=lang) }}</a>
  </div>
{% endblock %}
