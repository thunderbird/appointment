<html lang="{{ l10n('locale') }}">
  <body>
    <p>
      {{ l10n('confirm-mail-html-heading', {'attendee_name': attendee.name, 'attendee_email': attendee.email, 'date': date}) }}
    </p>
    <p>
      {{ l10n('confirm-mail-html-confirm-text') }}<br>
      <a
        href="{{ confirm }}"
        style="
          display:inline-block;
          padding:.5rem 1rem;
          color:white;
          background:#0e757f;
          border-radius:6px;
          text-decoration:none;
        "
      >{{ l10n('confirm-mail-html-confirm-action') }}</a>
    </p>
    <p>
      {{ l10n('confirm-mail-html-deny-text') }}<br>
      <a
        href="{{ deny }}"
        style="
          display:inline-block;
          padding:.5rem 1rem;
          color:white;
          background:#ef8990;
          border-radius:6px;
          text-decoration:none;
        "
      >{{ l10n('confirm-mail-html-deny-action') }}</a>
    </p>
    {% include 'includes/footer.jinja2' %}
  </body>
</html>
