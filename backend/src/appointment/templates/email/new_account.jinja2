{% extends "includes/base.jinja2" %}
{% set heading = '<br>'.join(l10n('new-account-mail-html-heading', lang=lang if lang else None).split("\n")) %}
{% set hide_contact_form_url_hint = True %}

{% block information %}
  <div style="color: {{ colour_text_base }}; text-align: center;">
    <p style="color: {{ colour_tbpro_apmt_primary_hover }}; font-weight: 600; font-size: 16px; line-height: 19px;">
      {{ heading|safe }}
    </p>
    <p style="font-weight: 400; font-size: 10px; line-height: 12px;">
      {{ l10n('new-account-mail-html-body', {'date': date}, lang=lang if lang else None) }}
    </p>
    <p style="font-weight: 400; font-size: 13px; line-height: 16px;">
      {{ l10n('new-account-mail-html-body-2', lang=lang if lang else None) }}<br />
      <a href="{{ homepage_url }}" style="color: {{ colour_tbpro_apmt_primary }};">
        {{ homepage_url }}
      </a>
    </p>
    <p style="margin-bottom: 16px; margin-top: 32px;">
      <a
        href="{{ homepage_url }}"
        style="
          background: {{ colour_tbpro_apmt_primary }};
          border-radius: 3px;
          border: 1px solid {{ colour_tbpro_apmt_primary_hover }};
          box-shadow: 0px 6px 3px -4px rgba(21, 47, 60, 0.30);
          color: {{ colour_neutral }};
          display: inline-block;
          font-size: 13px;
          font-weight: 700;
          padding: 12px 24px;
          text-decoration:none;
          white-space: nowrap;
        "
      >{{ l10n('new-account-mail-action', lang=lang if lang else None) }}</a>
    </p>
    {% set link = '<a href="%(url)s">%(label)s</a>'|format(url=homepage_url + '/contact', label=l10n('mail-brand-contact-form', lang=lang if lang else None)) %}
    <p style="color: {{ colour_icon_secondary }}; font-weight: 400; font-size: 10px; line-height: 12px; margin: 0;">
      {{ l10n('mail-brand-reply-hint', {'contact_form_link': link}, lang if lang else None)|safe }}
    </p>
  </div>
{% endblock %}
