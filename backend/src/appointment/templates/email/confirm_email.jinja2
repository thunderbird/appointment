{% extends "includes/base.jinja2" %}
{# Code begins! #}
{% block introduction %}
  <div style="color: {{ colour_text_base }}; text-align: center; line-height: 16px;margin-bottom: 32px;">
    <p style="font-weight: 700; margin: 0;">
      {{ l10n('confirm-email-mail-html-heading') }}
    </p>
  </div>
{% endblock %}
{% block call_to_action %}
  <center>
    <p style="max-width: 380px; text-align: center;">
      {{ l10n('confirm-email-mail-html-body') }}
    </p>
  </center>
  <p style="
    color: {{ colour_tbpro_apmt_primary }};
    font-size: 13px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
    text-decoration-line: underline;
    margin-bottom: 32px;
    ">
    {{ confirm_email_url }}
  </p>
  <div style="margin-bottom: 32px">
    <a
      href="{{ confirm_email_url }}"
      style="
        display: inline-block;
        font-size: 13px;
        padding: 12px 24px;
        color: {{ colour_neutral }};
        background: {{ colour_tbpro_apmt_primary }};
        border-radius: 3px;
        border: 1px solid {{ colour_tbpro_apmt_primary_hover }};
        box-shadow: 0px 6px 3px -4px rgba(21, 47, 60, 0.30);
        text-decoration:none;
        white-space: nowrap;
        "
    >{{ l10n('confirm-email-mail-confirm-action') }}</a>
  </div>
  <center>
    <p style="
    color: {{ colour_text_muted }};
    text-align: center;
    font-size: 9px;
    font-style: normal;
    font-weight: 500;
    line-height: normal;
    margin-bottom: 32px;
    max-width: 315px;
    ">
    {{ l10n('confirm-email-mail-html-body-2') }}
    <a style="
        color: {{ colour_tbpro_apmt_primary }};
        text-decoration-line: underline;"
       href="{{ decline_email_url }}">{{ l10n('confirm-email-mail-html-body-2-link-text') }}</a>
  </p>
  </center>
  
{% endblock %}
